@{
    Layout = null;
}
@model CoreDataFirst.Models.Userlog
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
<br />
<br />
<h5 class="text-center"> Please Log In  </h5>
<br />
    <div class="offset-4 col-4">
        <form asp-controller="Home" asp-action="userlogin" method="post">

            <div>
                <input type="hidden" asp-for="Id" />
            </div>

           
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="alert-dark"></span>
                <h6>@TempData["wrng"]</h6>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="alert-dark"></span>
                <h6>@ViewBag.DB</h6>
            </div>


            <br />
            <br />
            <div class="form-group">

                <input type="submit" value="Login" class="btn btn-success btn-block" />



            </div>
        </form>
    </div>
